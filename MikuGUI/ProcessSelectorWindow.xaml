<Window x:Class="MikuGUI.ProcessSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Process"
        Height="520"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PanelBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox
            x:Name="SearchTextBox"
            Height="30"
            Margin="0,0,0,10"
            Background="#FF2AA8A0"
            Foreground="White"
            BorderBrush="{StaticResource BgBrush}"
            FontWeight="Bold"
            Padding="4"
            TextChanged="SearchTextBox_TextChanged"/>

        <ListView
            x:Name="ProcessListView"
            Grid.Row="1"
            MouseDoubleClick="ProcessListView_MouseDoubleClick"
            Background="{StaticResource PanelBrush}"
            Foreground="White"
            BorderBrush="{StaticResource BgBrush}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="260"
                        DisplayMemberBinding="{Binding ProcessName}"/>
                    <GridViewColumn Header="PID" Width="80"
                        DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Arch" Width="80"
                        DisplayMemberBinding="{Binding Architecture}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
