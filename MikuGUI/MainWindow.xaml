<Window x:Class="MikuGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MikuGUI"
        mc:Ignorable="d"
        Title="Miku Injector"
        Height="650"
        Width="875"
        MinHeight="650" MaxHeight="650"
        MinWidth="875" MaxWidth="875"
        ResizeMode="NoResize"
        Background="{StaticResource BgBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Controles -->
            <RowDefinition Height="200"/>
            <!-- Banner -->
            <RowDefinition Height="*"/>
            <!-- Logs -->
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="0,0,0,10" Background="{StaticResource PanelBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Height="35"
                Width="120"
                Content="Select DLL"
                Click="SelectDllButton_Click"/>

            <TextBox
                x:Name="SelectedDllText"
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,10,10,0"
                IsReadOnly="True"
                Text="DLL (Unselected)"
                BorderThickness="0"
                Background="Transparent"
                Foreground="White"/>


            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Height="35"
                Width="120"
                Content="Select Process"
                Click="SelectProcessButton_Click"/>

            <TextBlock
                x:Name="SelectedProcessText"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,10,0,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="  Target (None)"/>

            <Button
                x:Name="InjectButton"
                IsEnabled="False"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                Margin="10,0,0,0"
                Content="INJECT"
                FontSize="18"
                FontWeight="Bold"
                Click="InjectButton_Click"/>

        </Grid>

        <Border Grid.Row="1" Margin="0,0,0,10" CornerRadius="5" BorderThickness="0" Background="{StaticResource PanelBrush}">
            <Image
                Source="Assets/miku.jpg"
                Stretch="UniformToFill"/>
        </Border>

        <Border Grid.Row="2" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BgBrush}" BorderThickness="2" CornerRadius="5" Padding="5">
            <TextBox
                x:Name="LogTextBox"
                IsReadOnly="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                Background="{StaticResource PanelBrush}"
                Foreground="White"
                FontFamily="Consolas"
                FontSize="13"
                BorderThickness="0"/>
        </Border>

    </Grid>
</Window>
